<Window x:Class="PowerCopyGUI.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerCopyGUI"
        mc:Ignorable="d"
        Title="Settings" Height="225" Width="225" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <CheckBox Grid.ColumnSpan="3" Name="CheckForUpdates" Content="Check for Updates" HorizontalAlignment="left" Margin="6,0,0,0" VerticalAlignment="center"/>
        <Label Grid.Row="1" Content="Status Text:" HorizontalAlignment="left" Margin="0" VerticalAlignment="center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="STPreview" HorizontalAlignment="center" Margin="0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="20" Width="20" Background="#FF06B025"/>
        <Button Grid.Row="1" Grid.Column="2" x:Name="STChange" Content="Select" HorizontalAlignment="center" Margin="0" VerticalAlignment="center" />
        <Label Grid.Row="2" Content="Status Backgroud:" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="SBPreview" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="" VerticalAlignment="center" Height="20"  Width="20" Background="Black"/>
        <Button Grid.Row="2" Grid.Column="2" x:Name="SBChange" Content="Select" HorizontalAlignment="center" Margin="0" VerticalAlignment="Center" />
        <Label Grid.Row="3" Content="Status Bar:" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="SPBPreview" HorizontalAlignment="center" Margin="0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="20" Height="20" Background="#FF87CEFA"/>
        <Button Grid.Row="3" Grid.Column="2"  x:Name="SPBChange" Content="Select" HorizontalAlignment="Center" Margin="0" VerticalAlignment="center"/>
        <Label Grid.Row="4" Content="Progress Bar:" HorizontalAlignment="Left" Margin="0" VerticalAlignment="center"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="PBPreview" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="20" Height="20" Background="#FF06B025"/>
        <Button Grid.Column="2" Content="Select" HorizontalAlignment="Center" Margin="0" Grid.Row="4" VerticalAlignment="Center" x:Name="PBChange"/>
        <Button x:Name="ok" Content="OK" HorizontalAlignment="Left" Margin="2,0,0,0" Grid.Row="5" VerticalAlignment="Center" Width="40" Grid.Column="2"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Width="40" Grid.Column="1"/>
    </Grid>
</Window>
